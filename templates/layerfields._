<fieldset>
<section class='keyline-bottom pad1x pad1y small clearfix'>
  <label class='inline col2 field pad1x clearfix'>Name</label>
  <label class='inline pad1x col10'>Set description <em>(useful when inspecting data for styling)</em></label>
</section>
<% _(obj).each(function(helptext, field) { %>
<section class='keyline-bottom pad1 clearfix small'>
  <div class='pad1x col2'>
    <div class='field-key col12 inline field'><%= field %></div>
  </div>
  <div class='col10 pad1x'>
    <input class='small stretch' name='fields-<%=field%>' type='text' value='<%=_(helptext).escape()%>' />
  </div>
</section>
<% }); %>
<section class='pad2'>
  <a href='#' class='quiet button submit margin6 col6'>Done</a>
</section>
</fieldset>
